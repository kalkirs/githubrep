pipeline {
    agent any
    tools
    {
       maven "Maven 3.6.2"
    }

    environment {
    SVC_ACCOUNT_KEY = credentials('terraform-auth')
  }
     
    stages {
        stage ('checkout'){
            steps {
                git branch: 'master', url: 'https://github.com/ishaqmdgcp/jar.git'
            }
        }
      
      stage('Execute Maven') {
           steps {
             
                sh 'mvn clean install'           
          }
        }

		stage('Set creds') {
            steps {
              
                sh 'echo $SVC_ACCOUNT_KEY | base64 -d > ./gcr/jenkins.json'
		            sh 'pwd'
                       
               
            }
        }
	
	stage('Build image') {
	 steps {
        /* Below command specifies exactly like the command line */
    
        sh 'docker build -t gcr.io/mihappens/javaapp2 .'
    }
    }
        
        stage('Push Image to GCR') {
		 steps {  
			  dir('gcr')
			 {
			 sh 'pwd'
        sh 'gcloud auth activate-service-account jenkins@mihappens.iam.gserviceaccount.com --key-file=jenkins.json'
	sh 'gcloud auth configure-docker'
        sh 'docker push gcr.io/mihappens/javaapp2'
			 }
		 }
	 }
	 
	 
	stage('Create GKE cluster') {
	 steps {
    
        sh 'gcloud container clusters create samples-cluster --zone us-central1-a --num-nodes=1 --project mihappens'
    }
    }
    
    stage('Get creds from GKE cluster') {
	 steps {
    
        sh 'gcloud container clusters get-credentials samples-cluster --zone us-central1-a --project mihappens'
    }
    }
    
    stage('App Deploy') {
	 steps {
	 dir('gcr')
			 {
        /* Below command specifies exactly like the command line */
    
        sh 'kubectl apply -f deployment.yaml'
	sh 'sleep 60s'
	
    }
    }
    }
    
    stage('App health check') {
	 steps {
    
        sh 'curl http://35.238.123.73:8080/health'
	
    
    }
    }
   }
}
